<% @products.each do |product| %>
    <%= link_to product do %>
        <div class="col s12 m6 l3" id="col-product-customize-history-order">
          <div class="card z-depth-2">
            <div class="card-image">
              <%= image_tag product.image.url(:thumb) %>
            </div>
            <div class="card-content customize-card-content-product">
              <div class="row card-title customize-card-title-product">
                <%= product.name %>
              </div>
              <div class="row short-intro-course">
                <div class="col s12 short-duration-enrolled">
                  <ul class="list-features-product">
                    <li class="item-feature-product">
                      <i class="material-icons md-36 icon-banner-news">group</i>
                      Buyers : <%= product.buyer %>
                    </li>
                    <li class="item-feature-product">
                      <i class="material-icons md-36 icon-banner-news">settings</i>
                      Manufacturer : <%= product.manufacturer %>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <div class="title-order-page">
              Order : #<%= @user.get_order_number(product.id) %>
            </div>
          </div>
        </div>
    <% end %>
<% end %>